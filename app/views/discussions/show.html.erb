<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @discussion.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @discussion.body %>
</p>

<p>
  <strong>User:</strong>
  <%= @discussion.user %>
</p>

<%= link_to 'Edit', edit_discussion_path(@discussion) %> |
<%= link_to 'Back', discussions_path %>

<%= simple_form_for [@discussion, @comment] do |f| %>
  <%= f.input :body %>
  <%= f.submit  %>
<% end %>

<% @discussion.comments.each do |comment| %>
  <div class="well">
    <%= comment.body %>
  </div>
<% end %>
